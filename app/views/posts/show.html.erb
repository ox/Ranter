<p>
  <%= link_to "ALL POSTS", :controller => "Posts", :action => "index" %><br/><b><%=h @post.body %></b>
</p>

<table>
  <% @post.responses.each do |response| %>
    <%  cycle('odd','even') %>
    <tr><td><%= ">> " + response.body%></td></tr>
  <% end %>
</table><br/>

<% form_for( @response, :action => "respond" ) do |f|  %>
  <%= f.label "Respond:" %><br/>
  <%= f.text_area :body , :cols=> 50, :rows => 5 %>

  <%= hidden_field :response, :post_id, :value => @post.id %>

  <%= f.submit "reply" %>

<% end %>

<% if admin? %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<% end %>